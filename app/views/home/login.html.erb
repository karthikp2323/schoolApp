<!--body --> 
<body >

    <!-- Nav bar-->
    <%= render 'home/navbar' %>
      <!-- / Nav bar-->

<div class="login-body"> <!-- div login-body -->  
   <div class="container">  <!--  div container-->
        <div class="row login-row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-login">
                    <div class="panel-heading">
                        <div class="row">
                            <div >
                                <p> <small><span class="glyphicon glyphicon-lock" ></span></small>Login to your account</p>
                            </div>
                            
                        </div>
                        <hr>
                    </div>
                    <div class="panel-body">
                        <div class="row">   <!-- div row for fields-->
                            <div class="col-lg-12">
                                 <%= form_tag("check_login") do %>
                                    <div class="form-group login-error">
                                       <%= flash[:notice] %>
                                    </div>    
                                    <div class="form-group">
                                       <%= text_field_tag(:username, nil, class: 'form-control',placeholder: 'Username' ) %>
                                    </div>
                                    <div class="form-group">
                                       <%= password_field_tag(:password, nil, class: 'form-control',placeholder: 'Password') %>
                                    </div>
                                    <div class="form-group text-center">
                                        <label> LogIn As: </label> <%= select("login", "role_type", %w[Parent Teacher Admin Student], {}, { prompt: '-- Select --' }) %>
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-sm-6 col-sm-offset-3">
                                                 <%= submit_tag("Log In", {:class => "btn btn-primary btn-block"}) %>
                                            </div>
                                        </div>
                                    </div>
                                <% end %>       <!-- form end-->
                            </div>       <!-- / div col-lg-12 -->
                        </div>       <!-- / div row for fields-->
                    </div>      <!-- / div panel-body -->
                </div>      <!-- / div panel panel-login -->
            </div>     <!-- / div col-md-6 col-md-offset-3 -->
        </div>     <!-- / div row login-row -->
    </div>     <!-- / div container-->
 </div>   <!--/ div login-body -->  
</body>  
<!--/body --> 

        <!-- Footer -->
        <%= render 'home/footer' %>
        <!-- / Footer -->