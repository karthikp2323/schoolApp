                    </a>
                </div> -->
            </div>
<div class="widget-body">
<table class="table table-striped table-hover table-bordered" id="editabledatatable">
  <thead>
    <tr role="row">
      <th>First name</th>
      <th>Last name</th>
      <th>Dob</th>
      <th>Emergency contact</th>
      
      <th>City</th>
      
      <th>State</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.dob %></td>
        <td><%= student.emergency_contact %></td>
        
        <td><%= student.city %></td>
        
        <td><%= student.state %></td>
       
       
        
        <!-- <td><%= link_to 'Show', student, class: 'btn btn-info btn-xs edit' %></td> -->
        <td>
         

          <%= link_to 'Show / Edit', {:controller => "students", :action => "edit", :studentId => student.id, :classroomId => @classroomId, :id => student.id}, class: 'btn btn-info btn-xs edit' %>
            
            <%= link_to 'Destroy', {:controller => "students", :action => "destroy", :studentId => student.id, :classroomId => @classroomId}, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-info btn-xs edit' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
