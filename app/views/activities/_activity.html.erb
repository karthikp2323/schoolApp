
<% @activities.each do |activity| %>
<div class="col-lg-10 col-sm-10 col-xs-10 activities-width">
	
	<div class="widget-header  ">
	     <span class="widget-caption"> <strong><%= activity.title %>  </strong></span>
	</div>


	<div class="widget">
	  <div class="widget-body">
		
		<div>
			<% if activity.image.url.include? "assets/products" %>
			<div class="row"> 
		        <div class="col-md-6">
		           <div class="form-group">
		              <span class="input-icon icon-right">
		                 <%= image_tag activity.image.url, {:id => 'imageActivity'} %>  
		                     
		               </span>
		            </div>
		        </div>       
		      </div>
		      <% end %>
		</div>
			<p>
			    <%= activity.message %>
	        </p>
	  </div>

	  
	</div>

</div>

<% end %>


