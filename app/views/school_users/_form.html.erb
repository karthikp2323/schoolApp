 
 <div id="post-submit-message">
          <label id="lbl_success_message" style="color: #52B4E5;">
            
          </label> 
          <label id="lbl-error-message" style="color: red;">
            
          </label>
 </div>

                    <div class="widget-body">
                        <div>
                            <%= form_for(@school_user) do |f| %>
        

        <div class="row">
                <div class="col-sm-6">
                  <div class="form-group">
                     <span class="input-icon icon-right">
                    <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
                     
                     </span>
                  </div>
                </div>
                                            
                <div class="col-sm-6">
                  <div class="form-group">
                     <span class="input-icon icon-right">
                    <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
                     
                     </span>
                  </div>
                </div>
        </div>
 
    

        <div class="row">
                <div class="col-sm-6">
                  <div class="form-group">
                     <span class="input-icon icon-right">
                    <%= f.text_field :email_id, class: 'form-control', placeholder: 'Email Id' %>
                     <i class="glyphicon glyphicon-envelope"></i>
                     </span>
                  </div>
                </div>
                                            
                
        
                <div class="col-sm-6">
                  <div class="form-group">
                     <span class="input-icon icon-right">
                    <%= f.text_field :contact, class: 'form-control', placeholder: 'Contact' %>
                     <i class="glyphicon glyphicon-earphone"></i>
                     </span>
                  </div>
                </div>
                                            
                
        </div>

    
  
   
    <%= f.text_field :role_id, {:value => 2, :hidden => true} %>
  
    
    <%= f.text_field :school_id, {:value => session[:school_id], :hidden => true} %>
    
    <%= f.text_field :id, {:hidden => true} %>
   
    
  
<% end %>
<input type="hidden" id="txt_edit_or_save" >

<button type="submit" class="btn btn-blue" id="btn_add_teacher" onclick="addTeacherToClass()">Submit</button>
                        </div>
                    </div>


<script type="text/javascript">
   function addTeacherToClass() {
          //console.log("Inside 1");
          $("#btn_add_teacher").prop("disabled",true);
          
          var form_data = $('form').serialize(); 

          $.ajax({
              method: "POST",
              url: "/school_users",
              data: form_data
            }).done(function(data){
            // console.log(data.last_name);
              if ($("#txt_edit_or_save").val() == "edit") {
                  
                  $("#"+data.id).html("<td> "+ data.first_name +" </td> <td> "+ data.last_name +" </td> <td> "+ data.email_id +" </td> <td> "+data.contact +" </td> <td class='text-center action_buttons'><a href='javascript:manageTeacher("+data.id + ");'><i class='fa fa-pencil fa-2x'></i></a> <a data-confirm='Are you sure, all of his/her data will also be removed?' data-method='delete' href='/school_users/"+data.id+"'> <i class='fa fa-times-circle fa-2x'></i> </a> <button type='button' class='btn btn-info btn-xs' onclick='addClassToTeacher(" + '"' + data.first_name + " "+data.last_name +'"' +"," +data.id+" )'> Add Class </button> <button type='button' class='btn btn-info btn-xs' onclick='getClasses("+data.id+")'> Show Classes </button>   </td>");
                  // console.log('bb');
                  $("#lbl_success_message").text("Teacher Updated!");
                  
              }
              else{
                //console.log(data);
                $("#teacherDataTable").prepend("<tr id="+data.id+"><td>"+ data.first_name +"</td> <td> "+ data.last_name +" </td> <td> "+ data.email_id +" </td> <td>"+ data.contact + "</td> <td class='text-center action_buttons'><a href='javascript:manageTeacher("+data.id + ");'><i class='fa fa-pencil fa-2x'></i></a> <a data-confirm='Are you sure, all of his/her data will also be removed?' data-method='delete' href='/school_users/"+data.id+"'> <i class='fa fa-times-circle fa-2x'></i> </a><button type='button' class='btn btn-info btn-xs' onclick='addClassToTeacher(" + '"' + data.first_name + " "+data.last_name +'"' +"," +data.id+" )'> Add Class </button> <button type='button' class='btn btn-info btn-xs' onclick='getClasses("+data.id+")'> Show Classes </button> </td></tr>");


                //display message
               $("#lbl_success_message").html("Teacher Added!");

              }
              

      });

           
           
      };
     

</script>
                